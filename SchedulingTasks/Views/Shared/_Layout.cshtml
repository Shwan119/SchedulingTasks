<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchedulingTasks</title>

    <!-- Remove all Bootstrap links -->
    <!-- If you have custom site.css or other styles, keep them if they don't depend on Bootstrap -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchedulingTasks.styles.css" asp-append-version="true" />

    <!-- (Optional) FontAwesome & Lucide (icon libraries) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    // Add custom Tailwind config here
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100 text-gray-800">

    <header>
        <!-- Simple Tailwind navbar -->
        <nav class="bg-white border-b shadow mb-3">
            <div class="container mx-auto px-4 flex justify-between items-center h-16">
                <!-- Brand / Logo -->
                <a class="text-xl font-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    SchedulingTasks
                </a>

                <!-- Nav links -->
                <ul class="flex space-x-4">
                    <li>
                        <a class="text-gray-700 hover:text-gray-900"
                           asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-gray-900"
                           asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li>
                        <a class="text-gray-700 hover:text-gray-900"
                           asp-area="" asp-controller="ScheduledTasks" asp-action="Index">ScheduledTasks</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main content container -->
    <div class="container mx-auto px-4">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-t text-gray-600 py-4 mt-8">
        <div class="container mx-auto px-4">
            &copy; 2025 - SchedulingTasks -
            <a class="text-blue-600 hover:underline"
               asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Remove Bootstrap JS references -->
    <!-- Keep jQuery if you rely on it, or remove if you do not use it -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- If site.js doesn't use Bootstrap, you can keep it -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
